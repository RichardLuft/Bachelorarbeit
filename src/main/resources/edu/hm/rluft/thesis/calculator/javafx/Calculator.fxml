<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="parent" hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.172" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.hm.rluft.thesis.calculator.javafx.CalculatorController">
  <columnConstraints>
    <ColumnConstraints hgrow="NEVER" />
    <ColumnConstraints hgrow="NEVER" />
    <ColumnConstraints hgrow="NEVER" />
    <ColumnConstraints hgrow="NEVER" />
    <ColumnConstraints hgrow="NEVER" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
  </rowConstraints>
   <children>
      <TextField fx:id="textfieldResult" nodeOrientation="LEFT_TO_RIGHT" styleClass="textfield-result" GridPane.columnSpan="5" />
      <Button fx:id="buttonSeven" mnemonicParsing="false" text="7" GridPane.rowIndex="1" />
      <Button fx:id="buttonEight" mnemonicParsing="false" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="buttonNine" mnemonicParsing="false" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Button fx:id="buttonDivide" mnemonicParsing="false" text="/" GridPane.columnIndex="3" GridPane.rowIndex="1" />
      <Button fx:id="buttonClear" mnemonicParsing="false" text="←" GridPane.columnIndex="4" GridPane.rowIndex="1" />
      <Button fx:id="buttonFour" mnemonicParsing="false" text="4" GridPane.rowIndex="2" />
      <Button fx:id="buttonFive" mnemonicParsing="false" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="buttonSix" mnemonicParsing="false" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button fx:id="buttonMultiply" mnemonicParsing="false" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      <Button fx:id="buttonClearAll" mnemonicParsing="false" text="C" GridPane.columnIndex="4" GridPane.rowIndex="2" />
      <Button fx:id="buttonOne" mnemonicParsing="false" text="1" GridPane.rowIndex="3" />
      <Button fx:id="buttonTwo" mnemonicParsing="false" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="buttonThree" mnemonicParsing="false" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button fx:id="buttonMinus" mnemonicParsing="false" text="-" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <Button fx:id="buttonResult" mnemonicParsing="false" styleClass="button-result" text="=" GridPane.columnIndex="4" GridPane.rowIndex="3" GridPane.rowSpan="2" />
      <Button fx:id="buttonZero" mnemonicParsing="false" styleClass="button-zero" text="0" GridPane.columnSpan="3" GridPane.rowIndex="4" />
      <Button fx:id="buttonPlus" mnemonicParsing="false" text="+" GridPane.columnIndex="3" GridPane.rowIndex="4" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
